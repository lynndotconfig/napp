extends layout

block content
  .container
     .row
       table.table.table-hover.table-borderer
         thead
           tr
             th 名成
             th 时间
             th 详情
             th 详情
             th 详情
             th 详情
             th 详情
         tbody
           each item in news
            tr(class="item-id-#{item._id}")
              td #{item.question}
              td #{item.type_name}
              td #{item.answer_info}
              td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../news/#{item.__id}") 查看
              td: a(target="_blank", href="../news/update/#{item.__id}") 查看
              td:
                button.btn.btn-danger.del(type="button", data-id="#{item.__id}")