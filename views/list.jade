extends layout

block content
  .container
     .row
       table.table.table-hover.table-borderer
         thead
           tr
             th 名成
             th 时间
             td 详情

         tbody
           each item in movies
           	tr(class="item-id-#{item._id}")
           		td #{item.title}
           		td #{item.docker}
           		td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
           		td: a(target="_blank", href="../movie/#{item.__id}") 查看
           		td: a(target="_blank", href="../movie/update/#{item.__id}") 查看
           		td:
           		  button.btn.btn-danger.del(type="button", data-id="#{item.__id}")