extends layout

block content
  .container
     .row
       form.form-horizontal(method="post", action="/news/create", enctype="multipart/form-data")
         input(type="hidden",name="news[_id]",value="#{news._id}")
         .form-group
           label.col-sm-3.control-label(for="inputTitle") 问题
           .col-sm-10
             input#inputTitle.form-control(type="text", name="question", value="#{news.question}")
         .form-group
           label.col-sm-3.control-label(for="inputTitle") 类型
           .col-sm-10
             input#inputTitle.form-control(type="text", name="type_name", value="#{news.type_name}")
         .form-group
           label.col-sm-3.control-label(for="inputTitle") 回答描述
           .col-sm-10
             input#inputTitle.form-control(type="text", name="answer_info", value="#{news.answer_info}")
         .form-group
           label.col-sm-3.control-label(for="inputTitle") 图片
           .col-sm-10
             input#inputTitle.form-control(type="file", name="answer_pic", multiple="multiple")
         script(id="editor" type="text/plain" style="width:1024px;height:500px;")
         script.
          var ue = UE.getEditor('editor');
          function getContent() {
              var arr = [];
              arr.push("使用editor.getContent()方法可以获得编辑器的内容");
              arr.push("内容为：");
              arr.push(UE.getEditor('editor').getContent());
              alert(arr.join("\n"));
          }
         .form-group
           label.col-sm-3.control-label(for="inputTitle") 富文本输入
           .col-sm-10
             input#inputTitle.form-control(type="hidden", name="answer_solution", value="#{news.answer_solution}")
         script.
          document.getElementByName('answer_solution').value= getContent();
         .form-group
           .col-sm-offset-2.col-sm-10
             button.btn.btn-default(type="submit") 录入
